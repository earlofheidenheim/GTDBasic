<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/project_item_background"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <!-- Vertikales Layout f端r Projektname und die Detail-Zeile -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Projekt-Name -->
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project name"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="none" />

        <!-- Notiz-Vorschau -->
        <TextView
            android:id="@+id/tvProjectNotesPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keine Notizen vorhanden."
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Horizontale, gewichtete Zeile f端r die Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Details: Dauer (feste Breite) -->
            <TextView
                android:id="@+id/tvProjectDauer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dauer: 0:00"
                android:textSize="12sp"
                android:layout_marginEnd="16dp"/>

            <!-- Details: Kategorie (flexible Breite mit K端rzung) -->
            <TextView
                android:id="@+id/tvProjectKategorie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kategorie: -"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"/>

            <!-- Details: Status (flexible Breite mit K端rzung) -->
            <TextView
                android:id="@+id/tvProjectStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status: -"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
