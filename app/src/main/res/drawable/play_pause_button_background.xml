<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Zustand, wenn der Button gedrückt wird -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" /> <!-- Etwas dunkler/deutlicher bei Klick -->
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#99FFFFFF" />
        </shape>
    </item>
    
    <!-- Standardzustand -->
    <item>
        <shape android:shape="rectangle">
            <!-- Leichter Verlauf für den 3D-Effekt -->
            <gradient
                android:startColor="#50FFFFFF"
                android:endColor="#20FFFFFF"
                android:angle="270" />
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
        </shape>
    </item>
</selector>
